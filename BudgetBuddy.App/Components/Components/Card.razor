<div class="flex flex-col bg-white border border-gray-200 shadow-sm rounded-md dark:bg-neutral-900 dark:border-neutral-700 dark:shadow-neutral-700/70" id="@Id">
    @if (Header != null)
    {
        <div class="bg-gray-100 border-b border-gray-200 rounded-t-md py-2.5 px-3 md:py-3 md:px-4 dark:bg-neutral-900 dark:border-neutral-700">
            @Header
        </div>
    }

    <div class="p-2.5 md:p-3">
        @Body
    </div>

    @if (Footer != null)
    {
        <div class="bg-gray-100 border-t border-gray-200 rounded-b-md py-2.5 px-3 md:py-3 md:px-4 dark:bg-neutral-900 dark:border-neutral-700">
            @Footer
        </div>
    }
</div>


@code {

    [Parameter] public string Id { get; set; } = Guid.NewGuid().ToString();

    [Parameter] public RenderFragment? Header { get; set; }

    [Parameter] public RenderFragment? Body { get; set; }

    [Parameter] public RenderFragment? Footer { get; set; }
}