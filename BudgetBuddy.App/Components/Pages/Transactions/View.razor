@page "/transactions/view/{transactionId:guid}"
@using BudgetBuddy.Database.Enums
@inherits CustomComponentBase

<div class="backdrop-blur-lg bg-white/5 border border-white/10 rounded-xl shadow-lg mx-auto max-w-lg p-4">
    <div>
        <h5 class="font-bold text-center">Transaction '@_transactionModel.Name'</h5>
        <div class="mt-6 border-t border-gray-100">
            
            <dl class="divide-y divide-gray-100">
                <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm/6 font-medium text-gray-300">Name</dt>
                    <dd class="mt-1 text-sm/6 sm:col-span-2 sm:mt-0">@_transactionModel.Name</dd>
                </div>
                @if (!string.IsNullOrWhiteSpace(_transactionModel.Description))
                {
                    <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                        <dt class="text-sm/6 font-medium text-gray-300">Description</dt>
                        <dd class="mt-1 text-sm/6 sm:col-span-2 sm:mt-0">@_transactionModel.Description</dd>
                    </div>
                }
                <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm/6 font-medium text-gray-300">Price</dt>
                    <dd class="mt-1 text-sm/6 sm:col-span-2 sm:mt-0">@_transactionModel.Price.ToString("£#,0.00")</dd>
                </div>
                @if (_transactionModel.TransactionDate.HasValue)
                {
                    <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                        <dt class="text-sm/6 font-medium text-gray-300">Transaction Date</dt>
                        <dd class="mt-1 text-sm/6 sm:col-span-2 sm:mt-0">@_transactionModel.TransactionDate.Value.ToString("dd MMMM yyyy")</dd>
                    </div>
                }
                <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dt class="text-sm/6 font-medium text-gray-300">Type</dt>
                    <dd class="mt-1 text-sm/6 sm:col-span-2 sm:mt-0">@_transactionModel.Type.ToString()</dd>
                </div>
                @if (_transactionModel.Type == TransactionType.Outcome)
                {
                    <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                        <dt class="text-sm/6 font-medium text-gray-300">Category</dt>
                        <dd class="mt-1 text-sm/6 sm:col-span-2 sm:mt-0">@_transactionModel.Category.ToString()</dd>
                    </div>
                }
                <div class="p-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:px-0">
                    <dd class="mt-1 text-sm/6 sm:col-span-3 sm:mt-0">
                        <a href="/" class="px-4 py-2 text-sm font-medium bg-gray-100 dark:bg-neutral-700 dark:text-white rounded-lg hover:bg-gray-200 dark:hover:bg-neutral-600">Back</a>
                    </dd>
                </div>
            </dl>
        </div>
    </div>
</div>