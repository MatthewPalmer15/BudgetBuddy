@page "/account/register"
@inherits CustomComponentBase

<div class="w-full max-w-sm mx-auto">
    <div class="space-y-8">
        <div class="text-center">
            <h1 class="font-medium text-xl text-gray-800 dark:text-neutral-200">
                Create an account
            </h1>
        </div>

        <EditForm Model="_model" OnValidSubmit="RegisterUser">

            <div class="space-y-5">
                <div class="space-y-3">

                    <div class="grid grid-cols-2 gap-2">
                        <div>
                            <label for="register_firstname" class="sr-only">Forename</label>
                            <input id="register_firstname" @bind="_model.FirstName" type="text" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600" placeholder="Forename">
                        </div>
                        <div>
                            <label for="register_lastname" class="sr-only">Surname</label>
                            <input id="register_lastname" @bind="_model.LastName" type="text" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600" placeholder="Surname">
                        </div>
                    </div>

                    <div>
                        <label for="register_emailaddress" class="sr-only">Email Address</label>
                        <input id="register_emailaddress" @bind="_model.EmailAddress" type="email" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600" placeholder="Email">
                    </div>

                    <div>
                        <label for="register_password" class="sr-only">Password</label>
                        <input id="register_password" type="password" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600" placeholder="Password">
                        <div id="hs-strong-password" data-hs-strong-password='{ "target": "#register_password", "hints": "#register_password_hints","minLength": "8"}' class="flex mt-2 -mx-1"></div>
                        <div id="register_password_hints" class="mt-2">
                            <ul class="space-y-2 text-xs text-gray-500 dark:text-neutral-500">
                                <li data-hs-strong-password-hints-rule-text="min-length" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                                    <span class="hidden" data-check>
                                        <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/>
                                        </svg>
                                    </span>
                                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                                    <span class="text-gray-500 dark:text-neutral-200">Minimum 8 characters</span>
                                </li>
                                <li data-hs-strong-password-hints-rule-text="lowercase" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                                    <span class="hidden" data-check>
                                        <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/>
                                        </svg>
                                    </span>
                                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                                    <span class="text-gray-500 dark:text-neutral-200">Contain lowercase</span>
                                </li>
                                <li data-hs-strong-password-hints-rule-text="uppercase" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                                    <span class="hidden" data-check>
                                        <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/>
                                        </svg>
                                    </span>
                                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                                    <span class="text-gray-500 dark:text-neutral-200">Contain uppercase</span>
                                </li>
                                <li data-hs-strong-password-hints-rule-text="numbers" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                                    <span class="hidden" data-check>
                                        <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/>
                                        </svg>
                                    </span>
                                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                                    <span class="text-gray-500 dark:text-neutral-200">Contain numbers</span>
                                </li>
                                <li data-hs-strong-password-hints-rule-text="special-characters" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                                    <span class="hidden" data-check>
                                        <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                            <circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/>
                                        </svg>
                                    </span>
                                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                                    <span class="text-gray-500 dark:text-neutral-200">Contain special characters: !"#$%&'()*+,-./:;=?[]^_`{}|~</span>
                                </li>
                            </ul>
                        </div>
                    </div>

                    <div>
                        <label for="register_confirmpassword" class="sr-only">Confirm Password</label>
                        <input id="register_confirmpassword" @bind="_model.ConfimPassword" type="password" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600" placeholder="Confirm Password">
                    </div>

                </div>
            </div>

            <div class="space-y-4 mt-4">
                <button type="submit" class="py-3 px-4 w-full inline-flex justify-center items-center gap-x-2 sm:text-sm font-medium rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-blue-700">
                    Create account
                </button>

                <p class="text-center text-sm text-gray-500 dark:text-neutral-500">
                    Already have an account?
                    <a href="/account/login" class="text-[13px] text-gray-500 underline underline-offset-4 hover:text-blue-600 focus:outline-hidden focus:text-blue-600 dark:text-neutral-500 dark:hover:text-blue-400 dark:focus:text-blue-400">
                        Log in
                    </a>
                </p>
            </div>

        </EditForm>
    </div>
</div>