@page "/account/register"
@inherits CustomComponentBase

  <div class="py-10 lg:py-20 w-full max-w-[85rem] px-4 sm:px-6 lg:px-8 mx-auto">
    <div class="w-full max-w-sm mx-auto">
      <!-- Create Account Details -->
      <div class="space-y-8">
        <div class="text-center">
          <h1 class="font-medium text-xl text-gray-800 dark:text-neutral-200">
            Create an account
          </h1>
        </div>

        <div class="space-y-5">
          <div class="space-y-3">
            <!-- Input -->
            <div>
              <label for="hs-pro-shcafem" class="sr-only">
                Email
              </label>

              <input id="hs-pro-shcafem" type="email" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-indigo-500 focus:ring-indigo-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600" placeholder="Email">
            </div>
            <!-- End Input -->

            <!-- Strong Password -->
            <div>
              <label for="hs-pro-shcafpw" class="sr-only">
                Password
              </label>

              <input type="password" id="hs-pro-shcafpw" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-indigo-500 focus:ring-indigo-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600" placeholder="Password">
              <div id="hs-strong-password" data-hs-strong-password='{
                    "target": "#hs-pro-shcafpw",
                    "hints": "#hs-pro-shcafpw-hints",
                    "minLength": "8"
                  }' class="flex mt-2 -mx-1"></div>

              <div id="hs-pro-shcafpw-hints" class="mt-2">
                <ul class="space-y-2 text-xs text-gray-500 dark:text-neutral-500">
                  <li data-hs-strong-password-hints-rule-text="min-length" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                    <span class="hidden" data-check>
                      <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                    </span>
                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                    <span class="text-gray-500 dark:text-neutral-200">Minimum 8 characters</span>
                  </li>
                  <li data-hs-strong-password-hints-rule-text="lowercase" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                    <span class="hidden" data-check>
                      <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                    </span>
                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                    <span class="text-gray-500 dark:text-neutral-200">Contain lowercase</span>
                  </li>
                  <li data-hs-strong-password-hints-rule-text="uppercase" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                    <span class="hidden" data-check>
                      <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                    </span>
                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                    <span class="text-gray-500 dark:text-neutral-200">Contain uppercase</span>
                  </li>
                  <li data-hs-strong-password-hints-rule-text="numbers" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                    <span class="hidden" data-check>
                      <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                    </span>
                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                    <span class="text-gray-500 dark:text-neutral-200">Contain numbers</span>
                  </li>
                  <li data-hs-strong-password-hints-rule-text="special-characters" class="hs-strong-password-active:text-teal-500 flex items-center gap-x-3">
                    <span class="hidden" data-check>
                      <svg class="shrink-0 size-4" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><path d="m9 12 2 2 4-4"/></svg>
                    </span>
                    <span data-uncheck class="size-4 border border-gray-200 rounded-full dark:border-neutral-700"></span>
                    <span class="text-gray-500 dark:text-neutral-200">Contain special characters: !"#$%&'()*+,-./:;=?[]^_`{}|~</span>
                  </li>
                </ul>
              </div>
            </div>
            <!-- End Strong Password -->
          </div>

          <div class="space-y-5">
            <div class="pt-5 mt-6 border-t border-gray-200 dark:border-neutral-700">
              <div class="space-y-3">
                <h4 class="block mb-4 font-medium text-sm text-gray-800 dark:text-neutral-200">
                  Date of birth
                </h4>

                <!-- Input -->
                <div>
                  <label for="hs-pro-shcafbr" class="sr-only">
                    Date of birth
                  </label>

                  <input id="hs-pro-shcafbr" type="date" class="py-3 px-4 block w-full border-gray-200 rounded-lg sm:text-sm placeholder:text-gray-400 focus:border-indigo-500 focus:ring-indigo-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:placeholder:text-white/60 dark:focus:ring-neutral-600">
                </div>
                <!-- End Input -->
              </div>

              <p class="mt-2 text-xs text-gray-500 dark:text-neutral-500">
                Enter your birthday in the format MM/DD/YYYY. Please note that once registered, your birthday cannot be edited.
              </p>
            </div>

            <div class="pt-5 mt-6 border-t border-gray-200 dark:border-neutral-700">
              <div class="space-y-3">
                <h4 class="block mb-4 font-medium text-sm text-gray-800 dark:text-neutral-200">
                  Gender
                </h4>

                <!-- Radio -->
                <div class="flex items-center gap-x-1">
                  <input type="radio" name="hs-pro-shgnfbr" class="shrink-0 size-4.5 border-gray-300 rounded-full text-indigo-600 checked:border-indigo-600 focus:ring-indigo-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:checked:bg-indigo-500 dark:checked:border-indigo-500 dark:focus:ring-offset-gray-800" id="hs-pro-shgnfbr1">
                  <label for="hs-pro-shgnfbr1" class="text-sm text-gray-800 ms-1.5 dark:text-neutral-400">
                    Female
                  </label>
                </div>
                <!-- End Radio -->

                <!-- Radio -->
                <div class="flex items-center gap-x-1">
                  <input type="radio" name="hs-pro-shgnfbr" class="shrink-0 size-4.5 border-gray-300 rounded-full text-indigo-600 checked:border-indigo-600 focus:ring-indigo-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:checked:bg-indigo-500 dark:checked:border-indigo-500 dark:focus:ring-offset-gray-800" id="hs-pro-shgnfbr2">
                  <label for="hs-pro-shgnfbr2" class="text-sm text-gray-800 ms-1.5 dark:text-neutral-400">
                    Male
                  </label>
                </div>
                <!-- End Radio -->
              </div>

              <p class="mt-2 text-xs text-gray-500 dark:text-neutral-500">
                You can receive item recommendations tailored to your registered information, such as your gender.
              </p>
            </div>


            <div class="pt-5 mt-6 border-t border-gray-200 dark:border-neutral-700">
              <h4 class="block mb-4 font-medium text-sm text-gray-800 dark:text-neutral-200">
                Data Agreement
              </h4>

              <!-- Checkbox -->
              <div class="flex gap-x-1">
                <input type="checkbox" class="shrink-0 border-gray-300 size-4.5 rounded-sm text-indigo-600 checked:border-indigo-600 focus:ring-indigo-600 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-600 dark:checked:bg-indigo-500 dark:checked:border-indigo-500 dark:focus:ring-offset-neutral-800" id="hs-pro-shcaftac">
                <label for="hs-pro-shcaftac" class="text-sm text-gray-500 ms-1.5 dark:text-neutral-400">
                  I accept the
                  <a class="text-sm text-gray-500 underline underline-offset-4 hover:text-indigo-600 focus:outline-hidden focus:text-indigo-600 dark:text-neutral-500 dark:hover:text-indigo-400 dark:focus:text-indigo-400" href="#">
                    Terms and Conditions
                  </a>
                </label>
              </div>
              <!-- End Checkbox -->
            </div>
          </div>
        </div>

        <div class="space-y-4">
          <button type="button" class="py-3 px-4 w-full inline-flex justify-center items-center gap-x-2 sm:text-sm font-medium rounded-lg border border-transparent bg-indigo-600 text-white hover:bg-indigo-700 disabled:opacity-50 disabled:pointer-events-none focus:outline-hidden focus:bg-indigo-700">
            Create account
          </button>

          <p class="text-center text-sm text-gray-500 dark:text-neutral-500">
            Already have an account?
            <a class="text-[13px] text-gray-500 underline underline-offset-4 hover:text-indigo-600 focus:outline-hidden focus:text-indigo-600 dark:text-neutral-500 dark:hover:text-indigo-400 dark:focus:text-indigo-400" href="../../pro/shop/login.html">
              Log in
            </a>
          </p>
        </div>
      </div>
      <!-- End Create Account Details -->
    </div>
  </div>