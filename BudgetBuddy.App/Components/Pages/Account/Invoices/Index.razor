  </div>

  <!-- Footer -->
  <div class="pt-3 mt-4 border-t border-gray-200 dark:border-neutral-700">
    <div class="flex flex-wrap justify-between gap-2">
      <!-- Button Group -->
      <ul class="flex flex-wrap items-center gap-3">
        <!-- Button -->
        <li class="relative ps-3 first:ps-0 first:before:hidden before:absolute before:top-1/2 before:start-0 before:w-px before:h-1/2 before:bg-gray-200 before:-translate-y-1/2 dark:before:bg-neutral-700">
